{% extends '::base.html.twig' %}

{% block content_container %}
    <div class="col-xs-12">

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h2 class="center">{{ content_title | default('Documentation') }}</h2>
        {% block fos_user_content %}{% endblock %}
    </div>
{% endblock %}
